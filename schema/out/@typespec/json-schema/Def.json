{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "Def.json",
    "type": "object",
    "properties": {
        "def": {
            "type": "string",
            "const": "def"
        },
        "type": {
            "$ref": "#/$defs/ClassType"
        },
        "name": {
            "type": "string"
        },
        "children": {
            "type": "array",
            "items": {
                "$ref": "Def.json"
            }
        },
        "inherits": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "def",
        "name"
    ],
    "$defs": {
        "ClassType": {
            "type": "string",
            "enum": [
                "UsdGeom:Mesh",
                "UsdGeom:Xform",
                "UsdGeom:BasisCurves",
                "UsdShade:Material",
                "UsdShade:Shader",
                "Xform"
            ]
        }
    }
}