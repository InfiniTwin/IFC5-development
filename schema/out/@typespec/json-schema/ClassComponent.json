{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "ClassComponent.json",
    "type": "object",
    "properties": {
        "ifc5:class": {
            "type": "object",
            "properties": {
                "code": {
                    "$ref": "#/$defs/IfcType"
                },
                "uri": {
                    "type": "string"
                }
            },
            "required": [
                "code",
                "uri"
            ]
        }
    },
    "required": [
        "ifc5:class"
    ],
    "$defs": {
        "IfcType": {
            "type": "string",
            "enum": [
                "IfcWindow",
                "IfcProject",
                "IfcSite",
                "IfcBuilding",
                "IfcBuildingStorey",
                "IfcSpace"
            ]
        }
    }
}