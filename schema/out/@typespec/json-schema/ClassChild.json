{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "ClassChild.json",
    "type": "object",
    "properties": {
        "def": {
            "type": "string",
            "default": "def"
        },
        "type": {
            "$ref": "#/$defs/ClassType"
        },
        "name": {
            "type": "string",
            "default": "Void"
        },
        "inherits": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "def",
        "type",
        "name",
        "inherits"
    ],
    "$defs": {
        "ClassType": {
            "type": "string",
            "enum": [
                "UsdGeom:Mesh",
                "UsdGeom:Xform"
            ]
        }
    }
}